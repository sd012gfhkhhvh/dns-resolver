{
  "name": "@codecrafters/dns-server",
  "description": "Build your own DNS server challenge, from CodeCrafters",
  "type": "module",
  "target": "bun",
  "scripts": {
    "dev": "bun run --watch app/udp-server.ts & bun run --watch app/forwarding-server.ts",
    "dev:udp": "bun run --watch app/udp-server.ts",
    "build": "bun build --target=node app/udp-server.ts app/forwarding-server.ts --outdir=dist",
    "build:udp": "bun build --target=node app/udp-server.ts --outdir=dist",
    "start": "bash scripts/start-all.sh",
    "start:udp": "node dist/udp-server.js",
    "docker:redis": "docker run -p 6379:6379 --name dns-redis -d redis:latest",
    "docker:compose": "docker-compose up --build --abort-on-container-exit",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/dns-packet": "^5.6.5",
    "prettier": "^2.8.8"
  },
  "dependencies": {
    "@types/express": "^5.0.2",
    "dns-packet": "^5.6.1",
    "express": "^5.1.0",
    "redis": "^5.1.0",
    "zod": "^3.24.4"
  }
}
